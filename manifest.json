{
  "name": "Fast JIRA Issues",
  "version": "2.7",
  "description": "Inspect JIRA issues in a clear, simple popup.",
  "omnibox": { "keyword" : "jira" },
  "options_page": "options.html",
  "background": { "scripts": ["common.js", "background.js"] },
  "browser_action" : {
    "default_icon" : "icon-19.png",
    "default_title": "Jira Issues",
    "default_popup": "popup.html"
  },
  "permissions": [ "tabs", "*://*/*" ],
  "icons" : { "128" : "icon-128.png", "48" : "icon-48.png", "16" : "icon-16.png" },
  "manifest_version": 2
}
